
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div name="myLogin" style="position: absolute; right: 10px;">
        <%if(!username) { %>
        <form method="POST" action="/login">
          <label style="color: white;" for="username">Username: </label>  
          <input type="text" name="username" style="margin-right: 5pt;">
          <input type="submit" value="Sign in" class="btn btn-light">
        </form>
        <% } else { %>
          <form method="POST" action="/logout">
            <label style="color: white;" for="username">Username: </label>  
            <input type="text" disabled name="username" style="margin-right: 5pt;" value="<%=username%>">
            <input type="submit" value="Sign out" class="btn btn-light">
          </form>
          <% } %>
      </div>
    </div>
  </nav>
</header>
